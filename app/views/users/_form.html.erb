<%= form_for @user do |f| %>
  <div class= "errors">
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message|%>
      <li><%= message %></li>
    <% end %>
  <% end %>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>
